{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "declaration": true,
    "strict": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"],
  },
  "include": ["src", ".src/**/*.css"],
  "exclude": ["node_modules", "src/**/*.stories.tsx"]
}
